<Window
    x:Class="GettingRealProject.Views.Payment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GettingRealProject.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Payment"
    Width="800"
    Height="450"
    Background="LightGray"
    BorderThickness="0"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />

        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#adaDAD" />
        <TextBox
            x:Name="AmountBox"
            Grid.Row="1"
            Width="216"
            Height="51"
            Margin="245,142,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            Text=""
            TextWrapping="Wrap" />
        <Label
            x:Name="Fillin_Amount"
            Grid.Row="1"
            Width="154"
            Margin="276,111,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Indtast beløb:" />
        <Button
            x:Name="Paybutton"
            Grid.Row="1"
            Width="69"
            Height="20"
            Margin="306,207,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#03c04a"
            Click="Button_Click"
            Content="Betal" />

    </Grid>
</Window>

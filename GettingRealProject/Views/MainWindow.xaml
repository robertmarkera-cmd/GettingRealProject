<Window
    x:Class="GettingRealProject.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GettingRealProject.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="LightGray"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />

        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#adaDAD" />
        <Label
            x:Name="Welcome"
            Grid.Row="1"
            Margin="48,42,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Velkommen [Navn]" />
        <Label
            x:Name="Balance"
            Grid.Row="1"
            Margin="48,87,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Saldo = 0" />

        <Button
            x:Name="BtnFill"
            Grid.Row="1"
            Margin="57,250,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#03c04a"
            Click="Button_Click"
            Content="Tank op" />

    </Grid>

</Window>
